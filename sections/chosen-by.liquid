{{ 'chosen-by.css' | asset_url | stylesheet_tag }}

<div class="page-width">
<div class="chosen-by-section">
  {% if section.settings.title != blank %}
    <h2 class="chosen-by-title">{{ section.settings.title }}</h2>
  {% endif %}

  {% if section.settings.subtitle != blank %}
    <p class="chosen-by-subtitle">{{ section.settings.subtitle }}</p>
  {% endif %}

  <div class="chosen-by-logos-wrapper">
    <div class="chosen-by-logos-scroller js-chosen-by-scroller">
      <div class="chosen-by-logos-list-wrapper js-chosen-by-list-wrapper">
        <div class="chosen-by-logos-list js-chosen-by-list">
          {% assign logos = 'amalfilemon.webp,cafezal.webp,caffevergnano.webp,clinica botanica.webp,dream-factory.webp,enricorizzi.webp,guarnieri.webp' | split: ',' %}
          {% assign company_urls = 'https://www.clubjoy.it/search?q=amalfi+lemon+experience&options%5Bprefix%5D=last,https://www.clubjoy.it/search?q=cafezal&options%5Bprefix%5D=last,https://www.clubjoy.it/search?q=vergano&options%5Bprefix%5D=last,https://www.clubjoy.it/search?q=clinica+botanica&options%5Bprefix%5D=last,https://www.clubjoy.it/search?q=dream+factory&options%5Bprefix%5D=last,https://www.clubjoy.it/search?q=enrico+rizzi&options%5Bprefix%5D=last,https://www.clubjoy.it/search?q=guarnieri&options%5Bprefix%5D=last' | split: ',' %}

          {% for i in (0..6) %}
            <div class="logo-item">
              {% if company_urls[i] != blank %}
                <a href="{{ company_urls[i] }}" target="_blank" rel="noopener" class="logo-link">
                  <img
                    src="{{ logos[i] | asset_url }}"
                    alt="Company logo"
                    loading="lazy"
                    class="logo-image"
                  >
                </a>
              {% else %}
                <img
                  src="{{ logos[i] | asset_url }}"
                  alt="Company logo"
                  loading="lazy"
                  class="logo-image"
                >
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<script>
document.addEventListener("DOMContentLoaded", () => {
  const wrapper = document.querySelector(".js-chosen-by-list-wrapper");
  const list = document.querySelector(".js-chosen-by-list");

  if (!wrapper || !list) return;

  const fullWidth = list.offsetWidth;

  const clone1 = list.cloneNode(true);
  const clone2 = list.cloneNode(true);
  wrapper.appendChild(clone1);
  wrapper.appendChild(clone2);

  wrapper.style.setProperty('--chosen-by-scroll-distance', `-${fullWidth}px`);
});
</script>

