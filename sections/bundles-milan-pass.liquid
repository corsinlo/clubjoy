{{ 'bundles-pass.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <div class="bundle-pass-section">
    <!-- Header Section -->
    <div class="bundle-pass-header">
    </div>

    <!-- Hero Video or Image -->
    {% assign video_url = section.settings.hero_video | default: "https://cdn.shopify.com/videos/c/o/v/7f083f095f3649fda2b5e98c638771f9.mp4" %}
    {% if video_url != blank %}
      <div class="bundle-pass-hero">
        <video
          src="{{ video_url }}"
          autoplay
          loop
          muted
          playsinline
          class="bundle-pass-hero-video"
        >
          Your browser does not support the video tag.
        </video>
      </div>
    {% elsif section.settings.hero_image %}
      <div class="bundle-pass-hero">
        <img
          src="{{ section.settings.hero_image | img_url: '1200x600' }}"
          alt="{{ section.settings.hero_image.alt | default: section.settings.title }}"
          class="bundle-pass-hero-image"
        >
      </div>
    {% endif %}

    <!-- Main Content Area -->
    <div class="bundle-pass-content">
      <div class="bundle-pass-features">
        <h2 class="bundle-pass-main-title">{{ 'sections.milan-pass.main_title' | t }}</h2>
        <p class="bundle-pass-description">{{ section.settings.description }}</p>

        <!-- Features List -->
        <div class="bundle-pass-features-list">
          <div class="bundle-pass-feature">
            <div class="feature-icon">
              <img src="{{ 'handicraft.png' | asset_url }}" alt="Handicraft" class="feature-icon-img">
            </div>
            <div class="feature-content">
              <p class="feature-description">{{ 'sections.milan-pass.features.handicraft' | t }}</p>
            </div>
          </div>

          <div class="bundle-pass-feature">
            <div class="feature-icon">
              <img src="{{ 'calendar.png' | asset_url }}" alt="Calendar" class="feature-icon-img">
            </div>
            <div class="feature-content">
              <p class="feature-description">{{ 'sections.milan-pass.features.calendar' | t }}</p>
            </div>
          </div>

          <div class="bundle-pass-feature">
            <div class="feature-icon">
              <img src="{{ 'ticket.png' | asset_url }}" alt="Ticket" class="feature-icon-img">
            </div>
            <div class="feature-content">
              <p class="feature-description">{{ 'sections.milan-pass.features.ticket' | t }}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Pricing Section -->
      <div class="bundle-pass-pricing">
        <p class="pricing-note">{{ 'sections.milan-pass.pricing_note' | t }}</p>

        <!-- Pass 1 Pricing -->
        <div class="price-option">
          <h3 class="pass-title">{{ 'sections.milan-pass.pricing_op1' | t }}</h3>
          <div class="price-display">
            <span class="original-price">{{ 20000 | money }}</span>
            <span class="arrow">→</span>
            <span class="sale-price">{{ 16900 | money }}</span>
          </div>
          <a href="/pages/milano-pass" class="bundle-pass-button">
                  {{ 'sections.milan-pass.button1' | t }}
          </a>
        </div>

        <!-- Pass 2 Pricing -->
        <div class="price-option">
          <h3 class="pass-title">{{ 'sections.milan-pass.pricing_op2' | t }}</h3>
          <div class="price-display">
            <span class="original-price">{{ 6000 | money }}</span>
            <span class="arrow">→</span>
            <span class="sale-price">{{ 5000 | money }}</span>
          </div>
          <a href="/pages/milano-pass-2" class="bundle-pass-button">
            {{ 'sections.milan-pass.button2' | t }}
          </a>
        </div>
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="bundle-pass-reviews">
      <div class="review-item">
        <div class="review-stars">
          <span class="star filled">★</span>
          <span class="star filled">★</span>
          <span class="star filled">★</span>
          <span class="star filled">★</span>
          <span class="star">★</span>
        </div>
        <p class="review-text">"Milano è incredibile! Questo pass mi ha fatto scoprire laboratori che non avrei mai trovato da solo."</p>
        <span class="review-author">- Alessandro T.</span>
      </div>

      <div class="review-item">
        <div class="review-stars">
          <span class="star filled">★</span>
          <span class="star filled">★</span>
          <span class="star filled">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
        </div>
        <p class="review-text">"Perfetto per chi vuole vivere Milano come un local, super consigliato!"</p>
        <span class="review-author">- Giulia B.</span>
      </div>

      <div class="review-item">
        <div class="review-stars">
          <span class="star filled">★</span>
          <span class="star filled">★</span>
          <span class="star filled">★</span>
          <span class="star filled">★</span>
          <span class="star filled">★</span>
        </div>
        <p class="review-text">"Outstanding value! The Milan experience package exceeded all my expectations. Authentic, creative, and unforgettable!"</p>
        <span class="review-author">- Robert K.</span>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Milan Pass Bundle",
  "settings": [],
  "presets": [
    {
      "name": "Milan Pass Bundle"
    }
  ]
}
{% endschema %}