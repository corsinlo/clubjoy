<style>
  .team-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
    position: relative;
  }

  .team-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    align-items: center;
    position: relative;
  }

  .team-block {
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 1;
  }

  .team-block img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  .smaller-img {
    width: 60%;
    max-width: 200px;
    margin: 0 auto;
    display: block;
  }

  .decorative-arrow {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 300px;
    max-width: 40%;
    height: auto;
    z-index: 0;
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .team-section {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      margin: 0;
      padding: 0;
      position: relative;
    }

    .team-row {
      display: flex;
      flex-direction: column;
      margin-bottom: 5rem;x
    }

    /* Text padding */
    .team-block.team-text {
      padding-left: 60px;
      padding-right: 60px;
    }

    /* Image padding & centering */
    .team-block:not(.team-text) {
      padding-left: 60px;
      padding-right: 60px;
      align-items: center;
    }

    .team-block img {
      width: 250px;
      height: 215px;
      object-fit: cover;
      margin: 0 auto;
    }

    .team-textup {
      top: 40px;
    }

    .team-text {
      text-align:center;
    }

    .decorative-arrow {
      top: 0;
      right: 0;
      transform: none;
      width: 100px;
      height: 200px;
      content: url('{{ "about1a.webp" | asset_url }}');
      padding: 0;
    }

    .row-2 .team-block:first-child,
    .row-3 .team-block:last-child,
    .row-4 .team-block:first-child {
      order: 2;
    }

    .row-2 .team-block:last-child,
    .row-3 .team-block:first-child,
    .row-4 .team-block:last-child {
      order: 1;
    }
  }
</style>

