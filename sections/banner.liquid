    align-items: center;
    gap: 0.5rem;
    font-size: 15px;
  }

  @media (max-width: 600px) {
    .benefit-item {
      width: 45%; /* two items per row */
      justify-content: center;
    }

    .benefit-item:last-child {
      width: 100%; /* one full-width item centered below */
    }
  }
</style>

