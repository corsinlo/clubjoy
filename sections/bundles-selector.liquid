{{ 'bundles-selector.css' | asset_url | stylesheet_tag }}

<div class="bundles-selector">
  <div class="container">
    <div class="bundles-header">
      <h1 class="bundles-main-title">{{ section.settings.title }}</h1>
      <p class="bundles-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <div class="bundles-cards-container">
      <div class="bundle-card milano-card">
        <div class="bundle-card-image">
          <div class="bundle-card-overlay">
            <div class="bundle-card-icon">üèõÔ∏è</div>
          </div>
        </div>
        <div class="bundle-card-content">
          <h3 class="bundle-card-title">{{ section.settings.milano_title }}</h3>
          <p class="bundle-card-description">{{ section.settings.milano_description }}</p>
          <div class="bundle-card-price">{{ section.settings.milano_price }}</div>
          <a href="{{ section.settings.milano_link }}" class="bundle-card-button milano-button">
            {{ section.settings.milano_button_text }}
          </a>
        </div>
      </div>

      <div class="bundle-card venezia-card">
        <div class="bundle-card-image">
          <div class="bundle-card-overlay">
            <div class="bundle-card-icon">üö§</div>
          </div>
        </div>
        <div class="bundle-card-content">
          <h3 class="bundle-card-title">{{ section.settings.venezia_title }}</h3>
          <p class="bundle-card-description">{{ section.settings.venezia_description }}</p>
          <div class="bundle-card-price">{{ section.settings.venezia_price }}</div>
          <a href="{{ section.settings.venezia_link }}" class="bundle-card-button venezia-button">
            {{ section.settings.venezia_button_text }}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

