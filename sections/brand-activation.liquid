<style>
  /* ------------------------------------------------------------
     RESET & BASE
  ------------------------------------------------------------ */
  #brand-events-activations-portfolio {
    padding: 40px 20px;
    max-width: 1200px;
    margin: 0 auto;
    box-sizing: border-box;
  }
  #brand-events-activations-portfolio img {
    display: block;
    max-width: 100%;
  }
  .bea-divider {
    border: none;
    border-top: 1px solid #ddd;
    margin: 30px 0;
  }

  /* ------------------------------------------------------------
     TITLE AREA
  ------------------------------------------------------------ */
  .bea-title-wrapper {
    text-align: center;
    margin-bottom: 20px;
  }
  .bea-title-main {
    margin: 0;
  }
  .bea-title-sub {
    margin: 5px 0 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* ------------------------------------------------------------
     CAPTION TEXT
  ------------------------------------------------------------ */
  .bea-caption {
    text-align: center;
    font-weight: 500;
    margin: 15px 0;
  }

  /* ------------------------------------------------------------
     SLIDER STYLES
  ------------------------------------------------------------ */
  .bea-slider-container {
    position: relative;
    margin: 0 auto;
    overflow: hidden;
  }
  .bea-slider-wrapper {
    overflow-x: scroll;
    scroll-behavior: smooth;
  }
  .bea-slider-wrapper {
  overflow-x: scroll;
  scroll-behavior: smooth;

  /* Hide scrollbar on WebKit browsers */
  -ms-overflow-style: none;  /* IE 10+ */
  scrollbar-width: none;     /* Firefox */
}
.bea-slider-wrapper::-webkit-scrollbar {
  display: none;  /* Safari and Chrome */
}
  .bea-slider {
    display: flex;
    gap: 20px;
    padding-bottom: 10px;
  }
  .bea-slide {
    flex: 0 0 60%;
    max-width: 60%;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .bea-slide img {
  width: auto;
  height: 250px;
  object-fit: contain;
  margin: 0 auto;
}

  .bea-slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.8);
    border: none;
    font-size: 2rem;
    line-height: 1;
    padding: 5px 10px;
    cursor: pointer;
    z-index: 10;
    border-radius: 4px;
  }
  .bea-prev {
    left: 10px;
  }
  .bea-next {
    right: 10px;
  }

  /* ------------------------------------------------------------
     RESPONSIVE ADJUSTMENTS
  ------------------------------------------------------------ */
  @media screen and (min-width: 768px) {
    .bea-slide {
      flex: 0 0 40%;
      max-width: 40%;
    }
  }
  @media screen and (min-width: 1024px) {
    .bea-slide {
      flex: 0 0 30%;
      max-width: 30%;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    function initializeSlider(sliderContainer) {
      var wrapper = sliderContainer.querySelector('.bea-slider-wrapper');
      var slider = sliderContainer.querySelector('.bea-slider');
      var prevBtn = sliderContainer.querySelector('.bea-prev');
      var nextBtn = sliderContainer.querySelector('.bea-next');

      function getSlideWidth() {
        var slide = slider.querySelector('.bea-slide');
        if (!slide) return 0;
        var style = window.getComputedStyle(slide);
        var marginRight = parseFloat(style.marginRight) || 0;
        return slide.getBoundingClientRect().width + marginRight;
      }

      prevBtn.addEventListener('click', function () {
        wrapper.scrollBy({
          left: -getSlideWidth(),
          behavior: 'smooth'
        });
      });

      nextBtn.addEventListener('click', function () {
        wrapper.scrollBy({
          left: getSlideWidth(),
          behavior: 'smooth'
        });
      });
    }

    var allSliders = document.querySelectorAll('.bea-slider-container');
    allSliders.forEach(function (container) {
      initializeSlider(container);
    });
  });
</script>

