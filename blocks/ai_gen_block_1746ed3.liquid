{% doc %}
  @prompt
    create a split section with two columns with image and cta  button for each
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-section-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-split-section-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-split-section-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-split-section-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-split-section-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-split-section-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-split-section-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4 / 3;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-split-section-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-split-section-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_gap }}px;
  }

  .ai-split-section-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    line-height: 1.2;
  }

  .ai-split-section-text-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
  }

  .ai-split-section-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease, color 0.3s ease;
    border: none;
    cursor: pointer;
    align-self: flex-start;
  }

  .ai-split-section-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-split-section-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-split-section-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-split-section-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.9);
    }
  }
{% endstyle %}

<split-section-{{ ai_gen_id }} class="ai-split-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-section-container-{{ ai_gen_id }}">
    <div class="ai-split-section-grid-{{ ai_gen_id }}">
      <div class="ai-split-section-column-{{ ai_gen_id }}">
        <div class="ai-split-section-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image_1 %}
            <img
              src="{{ block.settings.image_1 | image_url: width: 1200 }}"
              alt="{{ block.settings.image_1.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image_1.width }}"
              height="{{ block.settings.image_1.height }}"
              class="ai-split-section-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-split-section-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-split-section-content-{{ ai_gen_id }}">
          {% if block.settings.heading_1 != blank %}
            <h2 class="ai-split-section-heading-{{ ai_gen_id }}">{{ block.settings.heading_1 }}</h2>
          {% endif %}

          {% if block.settings.text_1 != blank %}
            <div class="ai-split-section-text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</div>
          {% endif %}

          {% if block.settings.button_text_1 != blank %}
            <a
              href="{{ block.settings.button_link_1 }}"
              class="ai-split-section-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text_1 }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="ai-split-section-column-{{ ai_gen_id }}">
        <div class="ai-split-section-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image_2 %}
            <img
              src="{{ block.settings.image_2 | image_url: width: 1200 }}"
              alt="{{ block.settings.image_2.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image_2.width }}"
              height="{{ block.settings.image_2.height }}"
              class="ai-split-section-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-split-section-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-split-section-content-{{ ai_gen_id }}">
          {% if block.settings.heading_2 != blank %}
            <h2 class="ai-split-section-heading-{{ ai_gen_id }}">{{ block.settings.heading_2 }}</h2>
          {% endif %}

          {% if block.settings.text_2 != blank %}
            <div class="ai-split-section-text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</div>
          {% endif %}

          {% if block.settings.button_text_2 != blank %}
            <a
              href="{{ block.settings.button_link_2 }}"
              class="ai-split-section-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text_2 }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</split-section-{{ ai_gen_id }}>

<script>
  (function() {
    class SplitSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('split-section-{{ ai_gen_id }}', SplitSection{{ ai_gen_id }});
  })();
</script>

