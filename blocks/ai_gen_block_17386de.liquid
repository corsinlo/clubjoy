{% doc %}
  @prompt
    Email signup that also collects firstname and lastname, text centered, input fields with rpunded corners and some padding, create a gap among rows of first name/last name, email adress and button
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-email-signup-{{ ai_gen_id }} {
    display: block;
    padding: 40px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-email-signup__content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin: 0 auto;
    text-align: center;
  }

  .ai-email-signup__heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-email-signup__subtext-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-email-signup__field-wrapper-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.field_gap }}px;
  }

  .ai-email-signup__name-fields-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }

  .ai-email-signup__field-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-email-signup__input-{{ ai_gen_id }} {
    width: 100%;
    padding: 16px 20px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 14px;
    text-align: center;
  }

  .ai-email-signup__button-{{ ai_gen_id }} {
    width: 100%;
    padding: 16px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 600;
  }

  .ai-email-signup__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-email-signup__success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    margin-top: 8px;
  }

  .ai-email-signup__error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    margin-top: 8px;
  }

  @media screen and (max-width: 749px) {
    .ai-email-signup__name-fields-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<email-signup-{{ ai_gen_id }}
  class="ai-email-signup-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {%- form 'contact' -%}
    <div class="ai-email-signup__content-{{ ai_gen_id }}">
      {%- if block.settings.heading != blank -%}
        <h2 class="ai-email-signup__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {%- endif -%}

      {%- if block.settings.subtext != blank -%}
        <div class="ai-email-signup__subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</div>
      {%- endif -%}

      <div class="ai-email-signup__field-wrapper-{{ ai_gen_id }}">
        <div class="ai-email-signup__name-fields-{{ ai_gen_id }}">
          <div class="ai-email-signup__field-{{ ai_gen_id }}">
            <input
              type="text"
              name="contact[first_name]"
              class="ai-email-signup__input-{{ ai_gen_id }}"
              value="{{ form.first_name }}"
              aria-required="true"
              autocomplete="given-name"
              placeholder="{{ block.settings.first_name_placeholder }}"
              required
            >
          </div>
          <div class="ai-email-signup__field-{{ ai_gen_id }}">
            <input
              type="text"
              name="contact[last_name]"
              class="ai-email-signup__input-{{ ai_gen_id }}"
              value="{{ form.last_name }}"
              aria-required="true"
              autocomplete="family-name"
              placeholder="{{ block.settings.last_name_placeholder }}"
              required
            >
          </div>
        </div>

        <div class="ai-email-signup__field-{{ ai_gen_id }}">
          <input
            type="email"
            name="contact[email]"
            class="ai-email-signup__input-{{ ai_gen_id }}"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-email-signup-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="ai-email-signup-success-{{ ai_gen_id }}"
            {% endif %}
            placeholder="{{ block.settings.email_placeholder }}"
            required
          >
        </div>

        <button
          type="submit"
          class="ai-email-signup__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_label }}
        </button>

        {%- if form.errors -%}
          <div
            id="ai-email-signup-error-{{ ai_gen_id }}"
            class="ai-email-signup__error-{{ ai_gen_id }}"
          >
            <span>{{ form.errors.messages.email }}</span>
          </div>
        {%- endif -%}
        {%- if form.posted_successfully? -%}
          <div
            id="ai-email-signup-success-{{ ai_gen_id }}"
            class="ai-email-signup__success-{{ ai_gen_id }}"
          >
            <span>{{ block.settings.success_message }}</span>
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endform -%}
</email-signup-{{ ai_gen_id }}>

