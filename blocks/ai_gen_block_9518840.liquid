<script>
  (function() {
    class Carousel3D{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.isAnimating = false;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-carousel-3d-track-{{ ai_gen_id }}');
        this.cards = this.querySelectorAll('.ai-carousel-3d-card-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-carousel-3d-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-carousel-3d-next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-carousel-3d-dot-{{ ai_gen_id }}');
        this.totalCards = parseInt(this.track.dataset.totalCards) || this.cards.length;

        this.setupEventListeners();
        this.updateCarousel();
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.navigate(-1));
        this.nextButton.addEventListener('click', () => this.navigate(1));

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            if (!this.isAnimating) {
              this.currentIndex = index;
              this.updateCarousel();
            }
          });
        });
      }

      navigate(direction) {
        if (this.isAnimating) return;

        this.currentIndex = (this.currentIndex + direction + this.totalCards) % this.totalCards;
        this.updateCarousel();
      }

      updateCarousel() {
        this.isAnimating = true;

        this.cards.forEach((card, index) => {
          const offset = index - this.currentIndex;
          const absOffset = Math.abs(offset);

          let translateX = 0;
          let translateZ = 0;
          let rotateY = 0;
          let scale = 1;
          let opacity = 1;
          let zIndex = 0;

          if (offset === 0) {
            translateX = -50;
            translateZ = 0;
            rotateY = 0;
            scale = 1;
            opacity = 1;
            zIndex = 3;
          } else if (offset === -1 || (offset > 0 && offset === this.totalCards - 1)) {
            translateX = -120;
            translateZ = -300;
            rotateY = 25;
            scale = 0.75;
            opacity = 0.6;
            zIndex = 1;
          } else if (offset === 1 || (offset < 0 && offset === -(this.totalCards - 1))) {
            translateX = 20;
            translateZ = -300;
            rotateY = -25;
            scale = 0.75;
            opacity = 0.6;
            zIndex = 1;
          } else {
            translateX = -50;
            translateZ = -600;
            rotateY = 0;
            scale = 0.5;
            opacity = 0;
            zIndex = 0;
          }

          card.style.transform = `translateX(${translateX}%) translateZ(${translateZ}px) rotateY(${rotateY}deg) scale(${scale})`;
          card.style.opacity = opacity;
          card.style.zIndex = zIndex;
        });

        this.dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });

        setTimeout(() => {
          this.isAnimating = false;
        }, 600);
      }
    }

    customElements.define('carousel-3d-{{ ai_gen_id }}', Carousel3D{{ ai_gen_id }});
  })();
</script>

