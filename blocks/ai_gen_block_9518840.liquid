  <div class="ai-carousel-3d-container-{{ ai_gen_id }}">
    <div class="ai-carousel-3d-viewport-{{ ai_gen_id }}">
      <div class="ai-carousel-3d-track-{{ ai_gen_id }}" data-current-index="0" data-total-cards="{{ card_count }}">
        {% for i in (1..10) %}
          {% liquid
            assign image_key = 'card_' | append: i | append: '_image'
            assign title_key = 'card_' | append: i | append: '_title'
            assign description_key = 'card_' | append: i | append: '_description'
            assign button_text_key = 'card_' | append: i | append: '_button_text'
            assign button_link_key = 'card_' | append: i | append: '_button_link'

            assign card_image = block.settings[image_key]
            assign card_title = block.settings[title_key]
            assign card_description = block.settings[description_key]
            assign button_text = block.settings[button_text_key]
            assign button_link = block.settings[button_link_key]
          %}

          {% if i <= card_count %}
            <div class="ai-carousel-3d-card-{{ ai_gen_id }}" data-index="{{ forloop.index0 }}">
              <div class="ai-carousel-3d-card-inner-{{ ai_gen_id }}">
                {% if card_image %}
                  <img
                    src="{{ card_image | image_url: width: 1000 }}"
                    alt="{{ card_image.alt | escape }}"
                    class="ai-carousel-3d-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="{{ card_image.width }}"
                    height="{{ card_image.height }}"
                  >
                {% else %}
                  <div class="ai-carousel-3d-image-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                <div class="ai-carousel-3d-overlay-{{ ai_gen_id }}">
                  {% if card_title != blank %}
                    <h3 class="ai-carousel-3d-title-{{ ai_gen_id }}">{{ card_title }}</h3>
                  {% endif %}

                  {% if card_description != blank %}
                    <p class="ai-carousel-3d-description-{{ ai_gen_id }}">{{ card_description }}</p>
                  {% endif %}

                  {% if button_text != blank %}
                    <a
                      href="{{ button_link | default: '#' }}"
                      class="ai-carousel-3d-button-{{ ai_gen_id }}"
                    >
                      {{ button_text }}
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-carousel-3d-controls-{{ ai_gen_id }}">
      <button
        class="ai-carousel-3d-nav-button-{{ ai_gen_id }} ai-carousel-3d-prev-{{ ai_gen_id }}"
        aria-label="Previous slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
