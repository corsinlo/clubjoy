{% doc %}
  @prompt
    anice newsletter
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-newsletter-content-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
  }

  .ai-newsletter-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
  }

  .ai-newsletter-subheading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.5;
  }

  .ai-newsletter-form-wrapper-{{ ai_gen_id }} {
    margin-top: {{ block.settings.form_spacing }}px;
  }

  .ai-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.input_button_gap }}px;
    {% if block.settings.form_layout == 'stacked' %}
      flex-direction: column;
    {% else %}
      flex-direction: row;
    {% endif %}
  }

  .ai-newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_font_size }}px;
  }

  .ai-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
    opacity: 0.7;
  }

  .ai-newsletter-input-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_background }};
    outline-offset: 2px;
  }

  .ai-newsletter-button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    white-space: nowrap;
    {% if block.settings.form_layout == 'stacked' %}
      width: 100%;
    {% endif %}
  }

  .ai-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-newsletter-message-{{ ai_gen_id }} {
    margin-top: 12px;
    font-size: 14px;
  }

  .ai-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
  }

  .ai-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-newsletter-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<newsletter-signup-{{ ai_gen_id }} class="ai-newsletter-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-newsletter-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-newsletter-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-newsletter-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    <div class="ai-newsletter-form-wrapper-{{ ai_gen_id }}">
      {% form 'customer', class: 'ai-newsletter-form-' | append: ai_gen_id %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        
        <input
          type="email"
          name="contact[email]"
          class="ai-newsletter-input-{{ ai_gen_id }}"
          value="{% if customer %}{{ customer.email }}{% endif %}"
          placeholder="{{ block.settings.input_placeholder }}"
          aria-label="{{ block.settings.input_placeholder }}"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="ai-newsletter-error-{{ ai_gen_id }}"
          {% endif %}
          {% if form.posted_successfully? %}
            aria-describedby="ai-newsletter-success-{{ ai_gen_id }}"
          {% endif %}
          required
        >
        
        <button type="submit" class="ai-newsletter-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </button>

        <div class="ai-newsletter-message-{{ ai_gen_id }}">
          {% if form.posted_successfully? %}
            <div id="ai-newsletter-success-{{ ai_gen_id }}" class="ai-newsletter-success-{{ ai_gen_id }}">
              {{ block.settings.success_message }}
            </div>
          {% endif %}

          {% if form.errors %}
            <div id="ai-newsletter-error-{{ ai_gen_id }}" class="ai-newsletter-error-{{ ai_gen_id }}">
              {{ form.errors.messages.email }}
            </div>
          {% endif %}
        </div>
      {% endform %}
    </div>
  </div>
</newsletter-signup-{{ ai_gen_id }}>

<script>
  (function() {
    class NewsletterSignup{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const form = this.querySelector('form');
        if (form) {
          form.addEventListener('submit', this.handleSubmit.bind(this));
        }
      }

      handleSubmit(event) {
        const emailInput = this.querySelector('input[type="email"]');
        if (emailInput && !emailInput.value.trim()) {
          event.preventDefault();
        }
      }
    }

    customElements.define('newsletter-signup-{{ ai_gen_id }}', NewsletterSignup{{ ai_gen_id }});
  })();
</script>

